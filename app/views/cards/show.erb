<h1 class="page-title"><%= @card.deck.title %></h1>



<% if @round.guesses.length >= 1 && incorrect %>
	<h4>the last answer was Incorrect</h4>
<% end %>




<h3 id="question"><%= @card.question %></h3>


<form action='/rounds/<%= @round.id %>/cards' method='POST'>
  <div class="form">
  <input type="hidden" name="card_id" value="<%= @card.id %>">
	<input type='text' name='response' placeholder='your answer'>
	<input class="form-button" type='submit' value='submit your guess'>
  </div>
</form>
